<Window x:Class="WpfTestApp.CollageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:uc="clr-namespace:WpfTestApp.UserControls"
        xmlns:local="clr-namespace:WpfTestApp"
        mc:Ignorable="d"
        Title="CollageWindow" WindowState="Maximized" d:DesignHeight="440" d:DesignWidth="860">
    <Grid>
        <DockPanel>
            <WrapPanel>
                <Button Padding="80, 0, 80, 0" Margin="10">Select folder</Button>
            </WrapPanel>
            <Grid Margin="0, 0, 10, 5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="120" />
                    <RowDefinition Height="35" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <uc:AssetsBox>
                    <uc:AssetsBox.AddBtn>
                        <Button Padding="18, 0, 18, 0" Content="Add"/>
                    </uc:AssetsBox.AddBtn>
                </uc:AssetsBox>


                <uc:EditorToolbar x:Name="editorToolbar" Margin="0, 4, 0, 4" Grid.Row="1">
                    <uc:EditorToolbar.BtnTemplate>
                        <Button Padding="7, 0, 7, 0"  Margin="3, 0, 3, 0">2</Button>
                    </uc:EditorToolbar.BtnTemplate>
                    <uc:EditorToolbar.SliderTemplate>
                        <Slider Width="200" VerticalAlignment="Center"/>
                    </uc:EditorToolbar.SliderTemplate>
                </uc:EditorToolbar>
                <!--
                <StackPanel Name="toolbar" Margin="0, 4, 0, 4" HorizontalAlignment="Right" Grid.Row="1" Orientation="Horizontal">
                    <Button Name="av" Padding="7, 0, 7, 0"  Margin="3, 0, 3, 0">1</Button>
                    <Button Padding="7, 0, 7, 0"  Margin="3, 0, 3, 0">1</Button>
                    <Button Padding="7, 0, 7, 0"  Margin="3, 0, 3, 0">1</Button>
                </StackPanel>
                -->
                <Grid Name="canvasEditor" Grid.Row="2" Background="Transparent" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                    <uc:EditorGrid Rows="2" Columns="1" ToolbarRef="{Binding ElementName=editorToolbar}" />
                </Grid>
            </Grid>
        </DockPanel>
    </Grid>
</Window>

<UserControl x:Class="WpfTestApp.UserControls.ImageContainer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfTestApp.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" AllowDrop="True" Drop="DropHandle" Keyboard.KeyDown="imageScroll_KeyDown">
    <ScrollViewer x:Name="imageScroll" VerticalScrollBarVisibility="Visible" HorizontalScrollBarVisibility="Visible">
        <Image Stretch="Uniform" Name="img" Source="{Binding Source}"
                MouseMove="imageScroll_MouseMove" 
                MouseLeftButtonDown="imageScroll_MouseLeftButtonDown" 
                MouseLeftButtonUp="imageScroll_MouseLeftButtonUp"
                d:Width="200"
                d:Height="350"
        >

        </Image>
    </ScrollViewer>
</UserControl>

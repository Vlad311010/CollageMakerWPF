<UserControl x:Class="WpfTestApp.UserControls.ImageAsset"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfTestApp.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="70" d:DesignWidth="90"
             MouseMove="imgPreview_MouseMove">
    <Grid>
        <Image Stretch="{Binding Stretch}" Name="imgPreview" Source="{Binding AssetSource}" MouseRightButtonUp="imgPreview_MouseRightButtonUp"/>
    </Grid>
</UserControl>
